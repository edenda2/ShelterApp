pipeline {
  agent {
    docker {
      image 'windsekirun/jenkins-android-docker:1.1.1'
      ENTRYPOINT ["/docker-entrypoint.sh"]
CMD ["postgres"]
    }
  }
  options {
    skipStagesAfterUnstable()
  }
  stages {
    stage ('Prepare'){
      steps {
        sh 'chmod +x ./Example/gradlew'
      }
    }
    stage('Compile') {
      steps {
        sh './Example/gradlew compileDebugSources'
      }
    }
    stage('Unit test') {
      steps {
       // Compile and run the unit tests for the app and its dependencies
        sh './Example/gradlew testDebugUnitTest testDebugUnitTest' 

         //Analyse the test results and update the build result as appropriate
        //junit '*/TEST-.xml'
      }
    }
    stage('Build APK') {
      steps {
        sh './Example/gradlew assembleDebug'
      }
    }
  }
}
