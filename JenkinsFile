pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        
       stage('UI Testing') {
             steps {
                script {                                                          
                    if (currentBuild.result == null  || currentBuild.result == 'SUCCESS') {  
                 sh 'emulator @Nexus_Emulator_API_24'
                sh 'appium &'  
     
                sh 'rspec spec -fd'
          }
        }
      }
    }
  }

