pipeline {
  agent {
    docker {
      image 'windsekirun/jenkins-android-docker:1.1.1'
    }
  }
  options {
    skipStagesAfterUnstable()
  }
  stages {
    stage ('Prepare'){
      steps {
        sh 'chmod +x ./gradlew'
      }
    }
    stage('Checkstyle') {
    steps {
        sh 'vendor/bin/phpmd --report=checkstyle --report-file=`pwd`/build/logs/checkstyle.xml --standard=PSR2 --extensions=php --ignore=autoload.php --ignore=vendor/ . || exit 0'
        checkstyle pattern: 'build/logs/checkstyle.xml'
    }
}
    stage('Compile') {
      steps {
      //here error
        sh './gradlew compileDebugSources'
      }
    }

    stage('Unit test') { 
      steps {
           sh './gradlew testDebugUnitTest '
      }
    }
        stage('Build APK') {
      steps {
        sh "./gradlew assembleDebug"
      }
    }
  }
}
