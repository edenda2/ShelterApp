


pipeline {
    agent{
        docker {
            image 'windsekirun/jenkins-android-docker:1.1.1'
        }
     }
     options {
         skipStagesAfterUnstable()
     }
     stages {
         stage ('Prepare'){
             steps {
                 sh 'chmod +x ./gradlew'

             }
         }
         
               stage('Start Emulator') { 
             steps {
             bat 'C:\\Users\\sapir\\AppData\\Local\\Android\\Sdk\\emulator\\emulator.exe -avd PIXEL_API_25'
                   }
               }
         
         
         stage('Compile') {
              steps {
                  sh './gradlew compileDebugSources'
              }
         }
         
         
           stage('Lint and Unit Test'){
      parallel {
        stage('lint'){
          steps{
            script {
              try {
                sh './gradlew lint'
              } catch (Exception e) {
                echo e.getMessage()
                echo "Lint failed"
              }
            }       
          }
        }
        stage('test'){
          steps{
            script {
              try {
                sh './gradlew test'
              } catch (Exception e) {
                echo e.getMessage()
                echo "test failed"
              }
            }       
          }   
        }
      }
    }
    stage('createAPK'){
      steps{
        sh './gradlew assembleRelease'  
      }
    }
  }
         
         
   
      
              
              
     }

