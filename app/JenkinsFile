pipeline {
  agent {
    docker {
      image 'windsekirun/jenkins-android-docker:1.1.1'
    }
  }
  options {
    skipStagesAfterUnstable()
  }
  stages {
    stage ('Prepare'){
      steps {
        sh 'chmod +x ./gradlew'
      }
    }
    stage('Compile') {
      steps {
        sh './gradlew compileDebugSources'
      }
    }
    stage('Build APK') {
      steps {
        sh "./gradlew assembleDebug assembleAndroidTest -PBUILD_NUMBER=${env.BUILD_NUMBER}"
      }
    }
    stage('Unit test') { 
      steps {
      ANDROID_SERIAL=emulator-5556


       "$ANDROID_HOME/platform-tools/adb wait-for-device shell"

sh './gradlew connectedAndroidTest'
      
      
          sh "./gradlew testDebugUnitTest -PBUILD_NUMBER=${env.BUILD_NUMBER}"
      }
    }
  }
  post {
        success {
            echo 'BUILD SUCCESSFUL - NO EMAIL WILL BE SENT'
        }

        failure { //Send an email to all teammates about broken build
            emailext(subject: '$JOB_NAME - Build# $BUILD_NUMBER - $BUILD_STATUS',
                    body: '$DEFAULT_CONTENT',
                    replyTo: 'edenda2@ac.sce.ac.il',
                    to: 'edenda2@ac.sce.ac.il'
            )

            emailext(subject: '$JOB_NAME - Build# $BUILD_NUMBER - $BUILD_STATUS',
                    body: '$DEFAULT_CONTENT',
                    replyTo: 'sapirsa3@ac.sce.ac.il',
                    to: 'sapirsa3@ac.sce.ac.il')

            emailext(subject: '$JOB_NAME - Build# $BUILD_NUMBER - $BUILD_STATUS',
                    body: '$DEFAULT_CONTENT',
                    replyTo: 'yaelbu11@ac.sce.ac.il',
                    to: 'yaelbu11@ac.sce.ac.il')

            emailext(subject: '$JOB_NAME - Build# $BUILD_NUMBER - $BUILD_STATUS',
                    body: '$DEFAULT_CONTENT',
                    replyTo: 'karindu@ac.sce.ac.il',
                    to: 'karindu@ac.sce.ac.il')


        }

    }
}
