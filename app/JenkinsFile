pipeline {
  agent {
    docker {
      image 'windsekirun/jenkins-android-docker:1.1.1'
    }
  }
  options {
    skipStagesAfterUnstable()
  }
  stages {
    stage ('Prepare'){
      steps {
        sh 'chmod +x ./gradlew'
      }
    }
    stage('Compile') {
      steps {
      //here error
        sh './gradlew compileDebugSources'
      }
    }
    stage('Unit test') { 
      steps {
           sh './gradlew -i -Dsingle.test=MyFirst test'
      }
    }
        stage('Build APK') {
      steps {
        sh "./gradlew assembleDebug"
      }
    }
  }
}
